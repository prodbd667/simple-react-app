{
    "presets": [
        "@babel/react",
        "@babel/typescript",
        [
            "@babel/env",
            {
                "modules": false
            }
        ]
    ],
    "plugins": [
        "react-hot-loader/babel",
        "@babel/plugin-proposal-class-properties",
        "@babel/plugin-proposal-object-rest-spread"
    ],
    "env": {
        "test": {
            "presets": [
                "@babel/react",
                "@babel/typescript",
                [
                    "@babel/env",
                    {
                        "modules": "commonjs"
                    }
                ]
            ],
            "plugins": [
                "@babel/plugin-transform-modules-commonjs"
            ]
        }
    }
}